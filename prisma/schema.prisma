generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  phone     String?
  photo     String?
  material  Material[]
  semester  Semester
  role      Role
  score     Int     
  fcmToken  String?
  lastActive String?
  isVerified Boolean
}

enum Role {
  STUDENT
  ADMIN
  DEV
}

enum Semester {
  One
  Two
  Three
  Four
  Five
  Six
  Seven
  Eight
}

model Material {
  id        Int      @id @default(autoincrement())
  subject   Subjects
  link      String
  type      MaterialType
  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
  accepted  Boolean
  semester  Semester
  title     String
  description String?
}

enum MaterialType {
  DOCUMENT
  VIDEO
  OTHER
}

enum Subjects {
    // Semester 1
    Introduction_to_Computer_Sciences
    Physics
    Calculus
    Psychology
    Probability_and_Statistics
    English

    // Semester 2
    Structured_Programming
    Ethics
    Physics_II
    Business
    Calculus_II
    Electronics

    // Semester 3
    OOP
    Statistical_Analysis
    Logic_Design
    Discrete_Mathematics
    Database_Management_Systems
    Report_Writing

    // Semester 4
    Computer_Architecture
    Data_Structures
    Linear_Algebra
    Artificial_Intelligence
    Operations_Research

    // Semester 5
    Operating_Systems
    DSP
    Computer_Networks
    System_Analysis_and_Design
    Data_Mining
    Compiler_Theory
    Numerical_Computing
    Statistical_Inference
    Microprocessors_and_Interfacing

    // Semester 6
    Software_Engineering
    Concepts_of_Programming_Languages
    HPC
    Analysis_and_Design_of_Algorithms
    Data_Security
    Computer_Graphics
    Machine_Learning
    Web_Development
    Business_Intelligence
    Data_Communication
    NLP
    Embedded_Systems
}

model PreviousExams {
  id        Int      @id @default(autoincrement())
  title     String
  semester  Semester
  subject   Subjects
  type      PreviousExamsType
  accepted  Boolean
  link      String
}

enum PreviousExamsType {
  Mid
  Final
  Other
}

model Announcement {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  due_date  DateTime? @default(now())
  type      AnnouncementType
  semester  Semester
  image     String?
}


enum AnnouncementType {
  Assignment
  Quiz
  Practical 
  Final
  Workshop
  Summer_Training 
  Faculty
  Mid
  Other
}